{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@reactive/*": ["src/components/reactive/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/utils/types/*"],
      "@consts/*": ["src/utils/consts/*"],
      "@assets/*": ["src/assets/*"],
    }
  }
}