---
interface Props {
  href: string;
  bottom?: number | string;
  left?: number | string;
}

const { href, bottom = 0, left = 0 } = Astro.props;
---

<picture
  style={{
    bottom: `${bottom}%`,
    left: `${left}%`,
  }}
>
  <source srcset={href} />
  <img src="" alt="loading" />
</picture>

<style>
  picture {
    position: absolute;
    max-width: 50%;
    max-height: 50%;
    opacity: 0;
    animation: fade-in 1s cubic-bezier(0, 0.2, 0.28, 0.92) forwards;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(50%);
    }
    to {
      opacity: 1;
      transform: translateY(0%);
    }
  }

  picture:nth-child(1) {
    animation-delay: 0s;
  }
  picture:nth-child(2) {
    animation-delay: 0.5s;
  }
  picture:nth-child(3) {
    animation-delay: 1s;
  }
</style>
