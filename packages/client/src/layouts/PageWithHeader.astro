---
import Header from "@components/Header.astro";
import Layout from "./Layout.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <Header />
  <main id="swup" class="wrapper">
    <slot />
  </main>
  <Footer />
  <script type="module" src="/src/assets/page-loader.js"></script>
</Layout>

<style>
  main {
    position: relative;
    width: 100%;
    height: fit-content;
    min-height: calc(var(--body-size) - 1px);
    padding-top: var(--header-size);
  }
</style>

<style is:global>
  @font-face {
    font-family: "Kenia";
    src: url(../assets/fonts/Kenia/Kenia-Regular.ttf) format("truetype");
  }

  @font-face {
    font-family: "Carter One";
    src: url(../assets/fonts/Carter_One/CarterOne-Regular.ttf)
      format("truetype");
  }

  :root {
    --header-size: 3.5rem;
    --body-size: calc(100svh - var(--header-size));
  }

  html {
    font-family: "Carter One";
  }
</style>
