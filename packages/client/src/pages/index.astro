---
import TitleAssets from "@components/TitleAssets.astro";
import PageWithHeader from "@/layouts/PageWithHeader.astro";
import ImportantButton from "@/components/ImportantButton.astro";
---

<PageWithHeader title="Welcome to Astro.">
  <section>
    <TitleAssets />
    <div>
      <h1>Fandom Cookbooks</h1>
      <p>
        Immerse yourself in the world of your favorite characters through the
        taste and dishes of cookbooks from various worlds!
      </p>
      <ImportantButton href="/fandoms">See Cookbooks</ImportantButton>
    </div>
  </section>
</PageWithHeader>

<style>
  section {
    height: 100%;
    margin-inline: auto;

    display: grid;
    grid-template-columns: 60% 40%;
  }

  div {
    width: auto;
    height: 100%;
    padding-inline: 1rem;
    overflow-x: hidden;

    display: grid;
    justify-items: center;
    grid-template-rows: 15% 65% 20%;
  }

  h1,
  p {
    width: 100%;
    text-align: end;
  }

  h1 {
    font-size: 5rem;
    color: var(--primary);
    font-family: "Kenia";
    margin-block: 2rem;
  }

  p {
    font-size: 1.5rem;
    color: var(--secondary);
  }

  @media (width <= 1480px) {
    div {
      grid-template-rows: 35% 40% 25%;
    }
  }

  @media (width <= 924px) {
    h1 {
      font-size: 2.5rem;
    }
    p {
      font-size: 1rem;
    }
  }

  @media (width <= 650px) {
    section {
      grid-template-columns: 1fr;
    }

    div {
      width: 100%;
      padding: 0rem;
    }
    h1, p {
      text-align: center;
    }
  }
</style>
